weclome = print("Welcome to the tip calaculator.")
total_bill = float(input("what was the total bill? $"))
percentage = int(input("what percentage? "))
people = int(input("how many people "))

money= (total_bill / people ) *   (1 + percentage/100 )


total = round(money,2)


print( f"Each person shoud pay: ${total}")
